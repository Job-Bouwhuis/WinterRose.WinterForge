<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Version>25.2.3</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>WinterRose.Reflection</Title>
    <Description>A handy lightweight tool library that aids with a lot of reflection stuff</Description>
    <Configurations>Debug;Release;debug FileServer</Configurations>
    <PackageReleaseNotes>Anonymous types can now get a custom base type, and are applied an AnonymousAttribute attribute. this[string] indexer is only generated when no base type is specified. as the default base type is "Anonymous"

HOTFIX: types marked with the AnonymousAttribute werent seen as anonymous types</PackageReleaseNotes>
  </PropertyGroup>

</Project>
